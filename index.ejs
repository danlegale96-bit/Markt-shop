
<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Markt-shop</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link rel="icon" href="/logo.png">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header class="site-header">
    <div class="brand">
      <img src="/logo.png" alt="Markt-shop" class="logo">
      <h1>Markt-shop</h1>
    </div>
    <nav>
      <a href="/cart" class="btn">Coș</a>
      <a href="/admin" class="btn btn-outline">Admin</a>
    </nav>
  </header>

  <main class="container">
    <section class="filters">
      <strong>Categorii:</strong>
      <a href="/" class="chip">Toate</a>
      <% categories.forEach(function(cat){ %>
        <a href="/?category=<%= encodeURIComponent(cat) %>" class="chip"><%= cat %></a>
      <% }); %>
    </section>

    <section class="products-grid">
      <% products.forEach(function(p){ %>
        <article class="card">
          <a href="/product/<%= p.id %>">
            <img src="<%= p.image %>" alt="<%= p.name %>">
          </a>
          <div class="card-body">
            <h3><a href="/product/<%= p.id %>"><%= p.name %></a></h3>
            <p class="muted"><%= p.category %></p>
            <p class="price"><%= (p.price_cents/100).toFixed(2) %> €</p>
            <button class="btn add-to-cart" data-id="<%= p.id %>">Adaugă în coș</button>
          </div>
        </article>
      <% }); %>
    </section>
  </main>

  <footer class="site-footer">
    © <%= new Date().getFullYear() %> Markt-shop — Demo
  </footer>

  <script>
    // Simple cart using localStorage
    function getCart(){ return JSON.parse(localStorage.getItem('markt_cart')||'[]'); }
    function saveCart(c){ localStorage.setItem('markt_cart', JSON.stringify(c)); }
    function addToCart(id){
      const c = getCart();
      const found = c.find(x=>x.id==id);
      if(found) found.qty++;
      else c.push({id: parseInt(id), qty:1});
      saveCart(c);
      alert('Produs adăugat în coș');
    }
    document.querySelectorAll('.add-to-cart').forEach(b => b.addEventListener('click', e => {
      addToCart(e.currentTarget.dataset.id);
    }));
  </script>
</body>
</html>
