
<!doctype html>
<html>
<head>
  <meta charset="utf-8" />
  <title><%= product.name %> — Markt-shop</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <header class="site-header">
    <div class="brand">
      <img src="/logo.png" class="logo" alt="Markt-shop">
      <h1>Markt-shop</h1>
    </div>
    <nav>
      <a href="/" class="btn">Catalog</a>
      <a href="/cart" class="btn">Coș</a>
    </nav>
  </header>

  <main class="container product-page">
    <div class="product-detail">
      <img src="<%= product.image %>" alt="<%= product.name %>">
      <div class="product-info">
        <h2><%= product.name %></h2>
        <p class="muted"><%= product.category %></p>
        <p class="price"><%= (product.price_cents/100).toFixed(2) %> €</p>
        <p><%= product.description %></p>
        <div>
          <label>Qty:
            <select id="qty" style="width:60px">
              <option>1</option><option>2</option><option>3</option><option>4</option>
            </select>
          </label>
          <button id="buy" class="btn">Cumpără acum</button>
          <button id="add" class="btn btn-outline">Adaugă în coș</button>
        </div>
      </div>
    </div>
  </main>

  <script>
    function getCart(){ return JSON.parse(localStorage.getItem('markt_cart')||'[]'); }
    function saveCart(c){ localStorage.setItem('markt_cart', JSON.stringify(c)); }

    document.getElementById('add').addEventListener('click', ()=>{
      const qty = parseInt(document.getElementById('qty').value||'1');
      const id = <%= product.id %>;
      const c = getCart();
      const found = c.find(x=>x.id==id);
      if(found) found.qty += qty;
      else c.push({id:id, qty:qty});
      saveCart(c);
      alert('Adăugat în coș');
    });

    document.getElementById('buy').addEventListener('click', async ()=>{
      const qty = parseInt(document.getElementById('qty').value||'1');
      const items = [{ id: <%= product.id %>, qty }];
      try {
        const resp = await fetch('/create-checkout-session', {
          method: 'POST',
          headers: {'Content-Type':'application/json'},
          body: JSON.stringify({ items })
        });
        const j = await resp.json();
        if (j.url) window.location = j.url;
        else alert('Eroare: ' + (j.error||'unknown'));
      } catch(e){
        alert('Eroare: ' + e.message);
      }
    });
  </script>
</body>
</html>
